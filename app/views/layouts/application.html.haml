!!!
%html
  %head
    %title Civic Commons
    = render :partial => 'layouts/facebook_meta_tags'
    = javascript_include_tag 'vendor/jquery-1.4.4.min'
    = javascript_include_tag 'vendor/jquery-ui-1.8.2.custom.min'
    = javascript_include_tag 'vendor/jquery-ui-timepicker-addon-0.5.min'
    = javascript_include_tag 'vendor/placeholder-1.0.1.min'
    = javascript_include_tag 'vendor/modernizr-1.5.min'
    = javascript_include_tag 'lib/rails'
    = javascript_include_tag 'lib/master'
    = javascript_include_tag 'lib/chosen_issues'
    = javascript_include_tag 'vendor/jquery.colorbox-min'
    = javascript_include_tag 'vendor/jquery.form'
    = javascript_include_tag 'vendor/jquery.remotipart'
    = javascript_include_tag 'vendor/jquery.loadmask.min'
    = javascript_include_tag 'vendor/jquery.hashchange.min'
    = javascript_include_tag 'vendor/jquery.easytabs'
    = javascript_include_tag 'lib/authentication'
    :plain
      <!--[if gte IE 7]><!-->
      <link media="screen, projection" rel="stylesheet" href="/stylesheets/screen.css" type="text/css" />
      <link media="screen, projection" rel="stylesheet" href="/stylesheets/ui-lightness/jquery-ui-1.8.2.custom.css" type="text/css" />
      <link media="screen, projection" rel="stylesheet" href="/stylesheets/jquery.loadmask.css" type="text/css" />
      <link media="screen, projection" rel="stylesheet" href="/stylesheets/colorbox.css" type="text/css" />
      <!--<![endif]-->
    :javascript
      $(document).ready(function(){

        $("input.datetime").datetimepicker({
          ampm: true,
          stepMinute: 15
        });

        #{yield :document_ready}

      });

      /* Google Analytics */
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-19685339-1']);
      _gaq.push(['_setDomainName', '.theciviccommons.com']);
      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();
    = yield :header
    = csrf_meta_tag

  %body
    :plain
      <!--[if lte IE 6]>
        <div class="global-warning">You are using a browser which isn't supported.  Try using <a href="http://www.firefox.com">Firefox</a>, <a href="http://www.apple.com/safari">Safari</a> or <a href="http://www.google.com/chrome">Chrome</a>.</div>
      <![endif]-->
    #header-wrapper
      #header
        = link_to 'Civic Commons', root_url, :id => 'logo', :title => 'Civic Commons'
        #header-utility
          - if current_person
            #login-status
              = render :partial => 'layouts/logged_in'
          - else
            #login-status.signed-out
              .offset-2
                = render :partial => 'layouts/single_column'
          .important
            %p
              = link_to 'Help build the Commons', build_the_commons_url
    #nav-wrapper
      #nav
        %ul#main-nav
          %li
            = link_to 'Home', root_url, :title => 'Home'
          %li
            = link_to 'Conversations', conversations_url, :title => 'Conversations'
          %li
            = link_to 'Issues', issues_url, :title => 'Issues'
          %li
            = link_to 'Community', community_url, :title => 'Community'
          %li.drop
            = link_to 'About Us', about_url
            %ul
              %li 
                = link_to 'Blog', blog_url
              %li 
                = link_to 'FAQ', faq_url
              %li
                = link_to 'Mission & Principles', principles_url
              %li
                = link_to 'Team', team_url
              %li
                = link_to 'Partners', partners_url
              %li
                = link_to 'In The News', press_url
              %li
                = link_to 'Careers', jobs_url
              %li
                = link_to 'Contact us', contact_us_url
    = yield :main_body
    #footer.footer
      #footer-inner
        %ul.sub-nav
          %li
            = link_to 'Blog', blog_url
          %li 
            = link_to 'About Us', about_url
          %li 
            = link_to 'FAQ', faq_url
          %li
            = link_to 'Mission & Principles', principles_url
          %li
            = link_to 'Team', team_url
          %li
            = link_to 'Partners', partners_url
          %li
            = link_to 'In The News', press_url
          %li
            = link_to 'Contact us', contact_us_url
        = render :partial => 'layouts/creative_commons'
        %p 
          = link_to 'Terms of Use', terms_url
        %ul.social-media
          %li
            %a{ :href => 'http://www.facebook.com/pages/Civic-Commons/143930632284131', :id => 'facebook'} Facebook
          %li
            %a{ :href => 'http://twitter.com/civiccommons', :id => 'twitter'} Twitter
          %li
            %a{ :href => 'http://www.youtube.com/user/neociviccommons', :id => 'youtube'} YouTube
          %li
            %a{ :href => '#', :id => 'rss'} RSS
= render :partial => '/shared/suggest_facebook_auth.js' if signed_in? && !current_person.declined_fb_auth? && !current_person.facebook_authenticated?
